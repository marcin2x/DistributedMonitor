{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "a monitor object",
    "type": "object",
    "properties": {
        "id": {
            "description": "the monitor id",
            "type": "number"
        },
        "user_id": {
            "description": "the user name",
            "type": "number"
        },
        "name": {
            "description": "the monitor name",
            "type": "string"
        },
        "port": {
            "description": "the monitor port",
            "type": "number"
        },
        "address": {
            "description": "the monitor address",
            "type": "string"
        }
    },
    "required": [
        "id",
        "user_id",
        "name",
        "port",
        "address"
    ],
    "additionalProperties": false
}